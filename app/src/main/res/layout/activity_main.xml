<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhextostring"
    tools:context="com.example.hexconverter.MainActivity">

    <EditText
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/txtconvertbackground"
        android:gravity="top"
        android:hint="@string/txtInputHint"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txtResult"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/txtconvertbackground"
        android:gravity="top"
        android:hint="@string/txtResultHint"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btnSource"
        app:layout_constraintTop_toBottomOf="@+id/txtInput" />

    <TextView
        android:id="@+id/btnSource"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/txtlabel"
        android:gravity="center"
        android:text="@string/txtHex"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_convert"
        app:layout_constraintEnd_toStartOf="@+id/btnSwap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/btnSwap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/baseline_swap_horiz_24"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnSource"
        app:layout_constraintEnd_toStartOf="@+id/btnDestination"
        app:layout_constraintStart_toEndOf="@id/btnSource"
        app:layout_constraintTop_toTopOf="@+id/btnSource"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/btnDestination"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/txtlabel"
        android:gravity="center"
        android:text="@string/txtText"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/btnSwap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSwap"
        app:layout_constraintTop_toTopOf="@+id/btnSwap"
        app:layout_constraintWidth_percent="0.4" />

    <Button
        android:id="@+id/btn_convert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btnbackground"
        app:backgroundTint="@null"
        android:text="@string/btnConvert"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnInputCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_copy"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtInput"
        app:layout_constraintEnd_toEndOf="@+id/txtInput" />

    <Button
        android:id="@+id/btnInputPaste"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_paste"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtInput"
        app:layout_constraintEnd_toStartOf="@+id/btnInputCopy" />

    <Button
        android:id="@+id/btnResultCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_copy"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/txtResult"
        app:layout_constraintEnd_toEndOf="@+id/txtResult" />

</androidx.constraintlayout.widget.ConstraintLayout>